<?xml version="1.0" encoding="utf-8"?>
<!--
  This layout is for the pizza detail screen.
  It uses a ScrollView to allow the user to scroll through the pizza's details.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/detailPizzaImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/pizza_image_description" />

        <TextView
            android:id="@+id/detailPizzaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="normal"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textSize="18sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/detailPizzaDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients :"
            android:textSize="18sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/detailPizzaIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparation :"
            android:textSize="18sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/detailPizzaSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>